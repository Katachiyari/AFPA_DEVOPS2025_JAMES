Vagrant.configure("2") do |config|
    config.vm.hostname = "lamp-server" # ajouté après correction perplexity (oublie)
    config.vm.box = "bento/debian-13" # Use Debian 12 base box --> OK pour l'IA 
    config.vm.provider "virtualbox" do |vb| # Customize VirtualBox settings
        vb.memory = "2048" # Allocate 2GB of RAM
        vb.cpus = 2 # Allocate 2 CPUs
  end
  config.vm.synced_folder './shared', # Sync the 'shared' directory to --> OK l'IA ne m'a pas repris sur le partage
    '/var/www/html', # the web server's root directory
    create: true, # Create the directory if it doesn't exist
    owner: 'www-data', 
    group: 'www-data', 
    mount_options: ['dmode=755','fmode=644'], # Set directory and file permissions
    type: 'virtualbox' # Use VirtualBox shared folder type
    
    #config.vm.network "private_network", ip: " --> OK l'IA ne m'a pas repris ces lignes
    config.vm.network "forwarded_port", guest: 80, host: 7676 # Forward port 80 to 7676 on host
    config.vm.provision "shell", inline: <<-SHELL
        chmod +x /vagrant/provision.sh
    SHELL
    config.vm.provision "shell", path: "provision.sh" # Provision with the shell script --> Ok l'IA ne m'a pas repris sur ces lignes
end